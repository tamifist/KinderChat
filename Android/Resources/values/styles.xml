<?xml version="1.0" encoding="utf-8" ?>
<resources>


  <style name="MyTheme" parent="MyTheme.Base">
    <item name="gradientAccent">@drawable/blue_gradient</item>
  </style>

  <style name="MyThemeRed" parent="MyTheme.Base.Red">
    <item name="gradientAccent">@drawable/red_gradient</item>
  </style>

   <!-- Base theme applied no matter what API -->
  <style name="MyTheme.Base.Red" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
 
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/primaryRed</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primaryDarkRed</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">@color/primaryBlack</item>
    
    <!-- Option to hide the drop shadow here-->

      <item name="android:windowContentOverlay">@null</item>
    
  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MyTheme.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- You can also set colorControlNormal, colorControlActivated-->
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
   <item name="colorPrimary">@color/primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">@color/primaryBlack</item>
    
    <!-- Option to hide the drop shadow here-->

      <item name="android:windowContentOverlay">@null</item>
    
  </style>

</resources>