<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:id="@+id/main_content">
    <com.refractored.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/gradientAccent"
        local:pstsPaddingMiddle="false"
        local:pstsShouldExpand="true"
        android:textColor="@color/unselected_tab"
        local:pstsTextColorSelected="@color/selected_tab"
        local:pstsIndicatorColor="@color/selected_tab"
        local:pstsUnderlineColor="@color/selected_tab" />
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>